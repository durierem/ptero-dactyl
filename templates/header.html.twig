<header>
    <nav>
        {% if app.user %}
            <a class="button" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-left"></i> Déconnexion</a>
            <a class="button" href="#"><i class="bi bi-person"></i> Mes statistiques ({{ app.user.username }})</a>
        {% else %}
            <a class="button" href="{{ path('app_login') }}"><i class="bi bi-box-arrow-in-right"></i> Connexion</a>
            <a class="button" href="{{ path('app_register') }}"><i class="bi bi-person-plus"></i> Nouveau compte</a>
        {% endif %}
    </nav>

    <div id="logo-container">
        <a href="{{ path('home') }}"><img id="logo" src="{{ asset('images/big_gra.png') }}" alt="Logo"></a>
        <a href="{{ path('home') }}" id="app-title">Ptero Dactyl<span class="blink">_</span></a>
    </div>

    <div id="theme-switcher-container">
        <button id="theme-switcher" title="Changer de thème">
            <i class="bi"></i>
        </button>
    </div>
</header>
