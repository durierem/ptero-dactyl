<nav id="nav">
    {% if app.user %}
        <div id="username">
            <i class="bi bi-person-circle"></i>
            {% if app.user.username|length > 15 %}
                {{ app.user.username|slice(0, 15) }}...
            {% else %}
                {{ app.user.username }}
            {% endif %}
        </div>
    {% endif %}
    <div id="links">
        <a href="{{ path('home') }}"><i class="bi bi-house"></i> Accueil</a>
        <a href="{{ path('leaderboard') }}"><i class="bi bi-clipboard-data"></i> Leaderboard</a>
        {% if app.user %}
        <a href="{{ path('user_panel')}}"><i class="bi bi-person"></i> Mes statistiques</a>
        <a href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-left"></i> DÃ©connexion</a>
        {% else %}
        <a href="{{ path('app_login') }}"><i class="bi bi-box-arrow-in-right"></i> Connexion</a>
        <a href="{{ path('app_register') }}"><i class="bi bi-person-plus"></i> Nouveau compte</a>
        {% endif %}
        <a href="{{ path('about') }}"><i class="bi bi-info-circle"></i> A propos</a>
