{% extends "base.html.twig" %}

{% block title %}Dactylotest{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('css/dactylotest.css') }}">
{% endblock %}

{% block body %}

{% include "header.html.twig" %}

<div id="main-content-container">
    <div id="dactylotest-container">

        <div id="text-container" class="area"></div>
        {# <textarea id="user-input" class="area"></textarea> #}
        <div id="virtual-user-input" tabindex="1" class="area"></div>
        {# tabindex="1" to allow div to receive focus #}

    </div>
</div>

{% if dactylotest_type == 'benchmark' %}
<script type="module" type="text/javascript" src="{{ asset('js/dactylotest/benchmark.js') }}"></script>
{% elseif dactylotest_type == 'exercise' %}
<script type="module" type="text/javascript" src="{{ asset('js/dactylotest/exercise.js') }}"></script>
{% endif %}

{% endblock %}
