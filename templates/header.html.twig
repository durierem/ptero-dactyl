<header>
    <nav>
        {% if app.user %}
        <button class="button">
            <a href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-left"></i> Déconnexion</a>
        </button>
        <button class="button">
            <a href="#"><i class="bi bi-person"></i> Mes statistiques ({{ app.user.username }})</a>
        </button>
        {% else %}
        <button class="button">
            <a href="{{ path('app_login') }}"><i class="bi bi-box-arrow-in-right"></i> Connexion</a>
        </button>
        <button class="button">
            <a href="{{ path('app_register') }}"><i class="bi bi-person-plus"></i> Créer un compte</a>
        </button>
        {% endif %}
    </nav>

    <div id="logo-container">
        <img id="logo" src="{{ asset('images/big_gra.png') }}" alt="Logo">
        <a href="{{ path('home') }}" id="app-title">Ptero Dactyl<span class="blink">_</span></a>
    </div>

    <div id="theme-switcher-container">
        <button id="theme-switcher" title="Changer de thème">
            <i class="fas"></i>
        </button>
    </div>
</header>
